class Purchase<Component> : Owned<Player>, Barrier {
    NOW MAX 1 Barrier: Component FROM This // must be me, right?
}

class Owed<Resource<Player>> : Owned<Player>, Barrier {
   default -Owed.
   This:: Accept<Resource>
}

class Accept<Resource> : Owned<Player> {
    count 0..1
    default Accept. // never hurts to accept twice

    -Resource:: Pay<Resource> // TODO this is not quite right?
    NOW MAX 0 Owed:: -This // TODO what if there never had been any Owed's?
}

class Pay<Resource> : Owned<Player>, Signal { // TODO lets you overpay like mad
    This:: -Owed<Resource>.
}
