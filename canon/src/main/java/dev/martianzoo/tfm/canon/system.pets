ABSTRACT CLASS Component {                        // Component is the single root of the hierarchy
  DEFAULT +Component!
  DEFAULT -Component!
}

ABSTRACT CLASS System

CLASS Class<Component> : System {
  HAS =1 This
}

ABSTRACT CLASS Temporary {                        // anything that can never survive across actions

  CLASS Ok : System {                             // magic rule: won't trigger anything else (TODO)
    HAS MAX 0 This
    This:: -This
  }

  ABSTRACT CLASS Signal : System {                // you'll never observe it existing, but things
    HAS MAX 0 This                                // can still be triggered by it. TODO a magic rule
    This:: -This                                  // that at least 1 effect must be triggered??
  }

  CLASS Die : System {                            // since this has max 0 like Signal, but doesn't
    HAS MAX 0 This                                // erase itself like Signal does, it is impossible
  }                                               // to ever create one, which is the point
}
